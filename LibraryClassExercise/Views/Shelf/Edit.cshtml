@model LibraryClassExercise.Models.Shelf

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>Shelf</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-route-libraryId="@Model.Library.Id" asp-route-shelfId="Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Width" class="control-label"></label>
                <input asp-for="Width" class="form-control" />
                <span asp-validation-for="Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<h4>Books</h4>
@* List of Books *@
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Height
            </th>
            <th>
                Width
            </th>
            <th>
                <a asp-controller="Book" asp-action="Create" asp-route-libraryId="@Model.Library.Id" asp-route-shelfId="@Model.Id">Create New Book</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book book in Model.Books)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => book.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => book.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => book.Width)
                </td>
                <td>
                    <a asp-controller="Shelf" asp-action="Edit" asp-route-libraryId="@Model.Library.Id" asp-route-shelfId="@Model.Id" asp-route-bookId="@book.Id">Edit</a> |
                    <a asp-controller="Shelf" asp-action="Details" asp-route-libraryId="@Model.Library.Id" asp-route-shelfId="@Model.Id" asp-route-bookId="@book.Id">Details</a> |
                    <a asp-controller="Shelf" asp-action="Delete" asp-route-libraryId="@Model.Library.Id" asp-route-shelfId="@book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
