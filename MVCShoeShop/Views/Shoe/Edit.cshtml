@model MVCShoeShop.Models.Shoe
@{
    ViewData["Title"] = "Edit Shoe";
}
<h1>@ViewData["Title"]</h1>
<div>
    <form asp-action="Update" asp-route-id="@Model.Id" method="post">
        <label>
            <span>Color</span>
            <input type="text" asp-for="Color" value="@Model.Color" />
        </label>
        <label>
            <span>Size</span>
            <input type="text" asp-for="Size" value="@Model.Size"/>
        </label>
        <div class="form-group">
            <label class="control-label">Images</label>
            <input type="file" name="imageFiles" class="form-control" multiple />
        </div>
        <button type="submit">עדכן נעל</button>
    </form>

    <h4>Images</h4>
    <div>
        @foreach (var image in Model.Images)
        {
            <img src="data:@image.ContentType;base64,@Convert.ToBase64String(image.ImageData)" alt="Product Image" width="100" />
            <form asp-action="DeleteImage" asp-route-id="@image.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        }
    </div>

    <div>
        <a asp-action="List" class="btn btn-secondary">Back to List</a>
    </div>
</div>