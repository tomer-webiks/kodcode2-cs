            </div>
            <div class="form-group">
                <label asp-for="Shelf.Height" class="control-label"></label>
                <input asp-for="Shelf.Height" class="form-control" />
                <span asp-validation-for="Shelf.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shelf.Width" class="control-label"></label>
                <input asp-for="Shelf.Width" class="form-control" />
                <span asp-validation-for="Shelf.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
