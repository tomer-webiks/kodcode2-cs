@model LibraryClassExercise.ViewModels.LibraryShelf

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Shelf</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-libraryId="LibraryId" method="post">
            <input type="hidden" asp-for="LibraryId"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Shelf.Id" class="control-label"></label>
                <input asp-for="Shelf.Id" class="form-control" />
